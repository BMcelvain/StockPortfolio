@using StockPortfolio.Core.Models
@model IEnumerable<Transaction>

<!DOCTYPE html>
<html>
<head>
    <style>
        .custom-btn {
            width: 225px;
            height: 35px;
        }
    </style>
</head>
<body>
    <h1>Transactions</h1>

    <div class="row">
        <div class="col-9">
            <div class="table-bordered">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Stock Symbol</th>
                            <th>Shares</th>
                            <th>Price</th>
                            <th>Transaction Type</th>
                            <th>Transaction Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transaction in Model)
                        {
                            <tr>
                                <td>@transaction.StockSymbol</td>
                                <td>@transaction.Shares</td>
                                <td>@transaction.Price</td>
                                <td>@transaction.TransactionType</td>
                                <td>@transaction.TransactionDate</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-3">
            <div class="d-flex flex-column">
                <form asp-action="GetPortfolio" asp-controller="Portfolio" method="post">
                <input type="hidden" name="PortfolioId" value="@Model.First().PortfolioId" />
                <button type="submit" class="btn-outline-secondary mb-2 custom-btn">Back to Portfolio</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>